<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  <link rel="stylesheet" href="/variables.css">
  <link rel="stylesheet" href="/nav.css">
  <link rel="stylesheet" href="/brands.css">
  <link rel="stylesheet" href="/search.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Parisienne&display=swap" rel="stylesheet">
  <title>Inventory App Brands</title>
</head>
<body class="panel playfair-display-400">
  <%- include("partials/nav.ejs", {currentPage: 'brands'}); %>
  <main>
    <section>
      <header>
        <div><a href="/brands/edit" title="Manage brands"><img src="/images/pen.svg" alt="manage brands"></a><h2>Brand Inventory</h2></div>
        <p class="sub-header">
        <span class="item-count">total # of brands: <%= brands.length %>, </span>
        <span class="item-count">total item count: <%= item_count %></span>
        </p>
      </header>
      <ul class="wrapper">
        <li class="box">
          <a href="/brands/edit">
          <span>Manage brands</span>
          <span class="large-count"><img class="large-icon" src="/images/star-with-plus.svg" alt="Add icon"></span>
          </a>
        </li>
        <% brands.forEach((brand) => { %>
          <li class="box" name="<%= brand.brand_id %>">
            <a href="/search/?searchText=<%- brand.brand_name %>">
            <span class="box-title"><%= brand.brand_name %></span>
            <span>Qty: <span class="large-count"><%= brand.perfume_count %></span></span>
            </a>
          </li>
        <% }); %>
      </ul>
    </section>
  </main>
</body>
</html>