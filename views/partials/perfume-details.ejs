        <section class="perfume-details">
          <header>
            <div> 
              
              <img src="<%= el.image_url %>" alt="the bottle">
              
              <h3>ID#<%= el.perfume_id %></h3>
            </div>
            <div class="perfume-price-panel">
              
              <div>
                <label for="">Avg. Price ($)</label>
                
                <input disabled type="text" name="" id="" value="<%= Number(el.avg_price).toFixed(2) %>">
              </div>
              <div>
                <label for="">Inventory:</label>
                
                <input disabled type="number" min="0" name="" id="" value="<%= el.total_count %>">
              </div>
              <div>
                <label for="">Receipt ids:</label>
                <select onchange="window.location.href = `/perfume-price-id/${this.value}`;" class="prices" id="perfume-prices" <%= (el.perfume_price_ids.length === 1) ? `disabled` : ``%>>
                  <% el.perfume_price_ids.forEach(price => { %>
                    <option value="<%= price %>" <%= (pp_id == price) ? 'selected' : '' %> ><%= price %></option>
                    <% }) %>
                  </select>
                </div>
              </div>
            </header>
            
          <%- include("errors.ejs"), {errors} %>
            <form action="/update/<%= el.perfume_id %>" method="post">
              <div class="field">
                <label for="">Perfume Name</label>
                <input type="text" name="name" id="" value="<%= el.perfume_name %>">
              </div>
              <div  class="field">
                <label for="">Image URL</label>
                
                <input type="url" inputmode="url" name="image_url" id="" value="<%= el.image_url %>">
              </div>
              <div  class="field">
                <label for="">Description</label>
                
                <input type="text" name="description" id="" value="<%= el.description %>">
              </div>
              
              <div  class="field">
                <label for="">Purchase price ($)</label>
                <% if (!perfume_prices) { perfume_prices = [] } %>

                <% let [ perfumePriceInv ] = perfume_prices.filter(obj => obj.pp_id == pp_id); %>
                <input type="number" inputmode="decimal" step=".01" name="price" id="" value="<%= perfumePriceInv?.pp_price %>">
              </div>
              
              <div  class="field">
                <label for="">Count</label>
                
                <input type="number" inputmode="numeric" min="0" pattern="[0-9]*" step="1" name="count" id="" placeholder="nothing yet" value="<%= perfumePriceInv?.pp_count %>">
              </div>
            <%- include("perfume-fields.ejs", {details: el, brands, categories}); %>
                        <div class="button-panel playfair-display-400">
                          <button type="submit"><img class="icon" src="/images/save-icon.svg" alt="Save">Save Changes</button>
                          <% if (perfumePriceInv && perfumePriceInv.pp_count > 0) { %>
                            <button type="button"><a href="/stock/<%= el.perfume_id %>"><img class="icon" src="/images/perfume-plus.svg" alt="Add">Manage Stock</a></button><% } %>
                          <button type="button">
                            <a href="/delete/items/<%= el.perfume_id %>/?route=<%= route %>"><img class="icon" src="/images/delete-icon.svg" alt="Delete">Delete</a></button>
                        </div>
                      </form>
                    </section>
                    