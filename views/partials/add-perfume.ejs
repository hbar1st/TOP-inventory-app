        <section class="perfume-details">
          <header>
            <div> 
              <h3>New perfume:</h3>
            </div>
          </header>
          
            <%- include("errors.ejs") %>
          <form action="/add" method="post">
                        <div class="field">
              <label for="">Perfume Name</label>
              <input required type="text" name="name" id="" value="<%= details.name %>">
            </div>
            <div class="field">
              <label for="">Image URL</label>
              
              <input required type="text" name="image_url" id="" value="<%= details.image_url %>">
            </div>
            <div  class="field">
              <label for="desc">Description</label>
              
              <input type="text" name="description" id="desc" value="<%= details.description %>">
            </div>
            <div  class="field">
              <label for="">Purchase price ($)</label>
              
              <input type="text" name="price" id="" value="<%= details.price %>">
            </div>
            <div  class="field">
              <label for="">Purchase Time</label>
              
              <input type="datetime-local" name="created_at" id="" value="<%= details.created_at %>">
            </div>
            <div  class="field">
              <label for="">Inventory</label>
              
              <input type="text" name="count" id="" value="<%= details.count %>">
            </div>

            <%- include("perfume-fields.ejs", {details, brands, categories}); %>

                    <div class="button-panel playfair-display-400">
                      <button type="submit"><img class="icon" src="/images/save-icon.svg" alt="Save">Save</button>
                    </div>
                  </form>
                </section>
                
                